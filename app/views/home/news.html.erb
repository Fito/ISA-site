<% @posts.each do |post| %>
  <div class='post'>
    <h4><%= post.title %></h4>
    <hr/>
    <p><%= post.content %></p>
    <hr/>
    <div class='attachments-container'>
      <% post.attachments.each do |attachment| %>
        <a class="attachment" href=<%= attachment.url %>><%= image_tag attachment.url %></a>
      <% end %>
    </div>
    <p class='publisher'>
      <b>Published by:</b>
      <%= post.admin.name %>
    </p>
    <p class='date'>
      <b>Publication date:</b>
      <%= l post.publication_date, :format => :short %>
    </p>
  </div>
<% end %>
