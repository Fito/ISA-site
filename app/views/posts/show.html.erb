<div class='show-post'>
  <p id="notice"><%= notice %></p>

  <p>
    <b>Title:</b>
    <%= @post.title %>
  </p>

  <p>
    <b>Content:</b>
    <%= @post.content %>
  </p>

  <p>
    <b>Published by:</b>
    <%= @post.admin.name %>
  </p>

  <p>
    <b>Publication date:</b>
    <%= l @post.publication_date, :format => :short %>
  </p>

  <div class='links'>
    <%= link_to 'Edit this Post', edit_post_path(@post) %> |
    <%= link_to 'Edit another post', posts_path %> |
    <%= link_to 'Create another Post', new_post_path %> |
    <%= link_to 'Back to Panel', '/admins/panel' %>
  </div>
</div>